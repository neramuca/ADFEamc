			"apiVersion": "2018-06-01",
			"properties": {
				"type": "MappingDataFlow",
				"typeProperties": {
					"sources": [
						{
							"dataset": {
								"referenceName": "TripdataCsv",
								"type": "DatasetReference"
							},
							"name": "TripDataCSV"
						},
